
@foreach (var item in Model)
{
    <div class="block-21 mb-4 d-flex">
        <a class="blog-img mr-4" style="background-image: url(@item.Image);"></a>
        <div class="text">
            <h3 class="heading-1"><a href="#">@item.Description</a></h3>
            <div class="meta">
                <div><a href="#"><span class="icon-calendar"></span> @item.CreatedDate</a></div>
                <div><a href="#"><span class="icon-person"></span> @item.CreatedBy</a></div>
                <div><a href="#"><span class="icon-chat"></span> 19</a></div>
            </div>
        </div>
    </div>
}
