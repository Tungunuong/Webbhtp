<h3 class="mb-5">@ViewBag.count Comments</h3>
@foreach (var item in Model)
{
    <ul class="comment-list">
        <li class="comment">
            <div class="vcard bio">
                <img src="../Content/images/person_1.jpg" alt="Image placeholder">
            </div>
            <div class="comment-body">
                <h3>@item.Name</h3>
                <div class="meta">@item.Date</div>
                <p>@item.Content</p>
            </div>
        </li>
    </ul>
}

