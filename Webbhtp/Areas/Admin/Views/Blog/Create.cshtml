@model Webbhtp.tb_Blog

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Thêm bài viết mới </h2>

@using (Html.BeginForm("Create", "Blog", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-6">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Thông tin bài viết</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form>
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Ngày tạo</label>
                                    @Html.EditorFor(model => model.CreatedDate, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ngày tạo", @required = "@required" } })
                                    @Html.ValidationMessageFor(model => model.CreatedDate, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Người tạo</label>
                                    @Html.EditorFor(model => model.CreatedBy, new { htmlAttributes = new { @class = "form-control", @placeholder = "Người tạo", @required = "@required" } })
                                    @Html.ValidationMessageFor(model => model.CreatedBy, "", new { @class = "text-danger" })
                                </div>
                                <div class="card card-success">
                                    <div class="card-header">
                                        <h3 class="card-title">Tiêu đề</h3>
                                    </div>
                                    <div class="card-body">
                                        @Html.TextAreaFor(model => model.Description, new { @class = "form-control text-box single-line" })
                                    </div>
                                    <!-- /.card-body -->
                                </div>
                                <div class="card card-success">
                                    <div class="card-header">
                                        <h3 class="card-title">Mô tả</h3>
                                    </div>
                                    <div class="card-body">
                                        @Html.TextAreaFor(model => model.Detail, new { @class = "form-control text-box single-line" })
                                    </div>
                                    <!-- /.card-body -->
                                </div>
                                <!-- checkbox -->
                                <div class="form-group">
                                    <div class="form-check">
                                        @Html.EditorFor(model => model.IsActive)
                                        <label class="form-check-label" for="exampleCheck1">Trạng thái</label>
                                        @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                                    </div>
                                    
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            
            <div class="col-md-6">
                <!-- Form Element sizes -->
                <div class="card card-success">
                    <div class="card-header">
                        <h3 class="card-title">Chi tiết</h3>
                    </div>
                    <div class="card-body">
                        @Html.TextAreaFor(model => model.content, new { @class = "form-control text-box single-line" })
                    </div>
                    <!-- /.card-body -->
                </div>

                <div class="card card-warning">
                    <div class="card-header">
                        <h3 class="card-title">Tải hình ảnh</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <div class="col-md-10">
                                        <input type="file" class="form-control-file" name="Image" id="Image" required>
                                        <br />
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        </div>
    </section>
}
<div>
    <p class="btn btn-secondary">
        @Html.ActionLink("Trở lại", "Index")
    </p>
</div>
