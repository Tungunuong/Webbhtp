@model IEnumerable<Webbhtp.tb_User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Quản lý tài khoản</h2>


<div class="card">
    <!-- /.card-header -->
    <div class="card-body">
        <h3 class="badge bg-success">@Html.ActionLink("Thêm tài khoản mới", "Create")</h3>

        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Tên đầu</th>
                    <th>Tên sau</th>
                    <th>Email</th>
                    <th>Mật khẩu</th>
                    <th>Admin</th>
                    <th>Chức năng</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    @{ int i = 1;}
                    @foreach (var item in Model)
                    {
                    <tr id="tr_@item.UserID">
                        <td>@i</td>
                        <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                        <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Password)</td>
                        <td>@Html.DisplayFor(modelItem => item.IsAdmin)</td>
                       

                        <td>
                            @Html.ActionLink("Sửa", "Edit", new { id = item.UserID }, new { @class = "badge bg-warning" }) |
                            @*@Html.ActionLink("Details", "Details", new { id = item.MenuId }) |*@
                            <a href="@Url.Action("Delete","Product", new {id = item.UserID})" onclick="return confirm('Bạn có chắc chắn muốn xoá?');" data-id="@item.UserID" class="badge bg-danger">Xóa</a>
                            @*@Html.ActionLink("Xóa", "Delete", new { id = item.MenuId })*@
                        </td>
                    </tr>
                    i++;
                }
                    </tr>
                </tbody>

            </table>
        </div>
        <!-- /.card-body -->
    </div>

